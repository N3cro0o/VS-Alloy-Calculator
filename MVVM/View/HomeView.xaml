<UserControl x:Class="Alloy_Calc.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Alloy_Calc.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#434343">
    <Grid>
        <DockPanel>
            <TextBlock TextWrapping="Wrap" Foreground="#f3f3f3" FontSize="16"
                   HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,25,0,10"
                   TextAlignment ="Center">
            <Run Text="Welcome to Vintage Story Alloy Calculator!" FontSize="24"/>
            <LineBreak/>
            <LineBreak/>
            Please select one of the options!
            </TextBlock>
            <WrapPanel DockPanel.Dock="Bottom" Margin="20" Background="#535353" HorizontalAlignment="Center">
                <Button Height="25" Width="110" Margin="10" Command="{Binding NavigateTinBronzeCom}">
                    <TextBlock TextWrapping="Wrap">
                        Tin bronze
                    </TextBlock>
                </Button>

                <Button Height="25" Width="110" Margin="10" Command="{Binding NavigateBismuthBronzeCom}">
                    <TextBlock TextWrapping="Wrap">
                        Bismuth brozne
                    </TextBlock>
                </Button>

                <Button Height="25" Width="110" Margin="10" Command="{Binding NavigateBlackBronzeCom}">
                    <TextBlock TextWrapping="Wrap">
                        Black bronze
                    </TextBlock>
                </Button>

                <Button Height="25" Width="110" Margin="10" Command="{Binding NavigateAlloyScreenCom}">
                    <TextBlock TextWrapping="Wrap">
                        Other alloys
                    </TextBlock>
                </Button>

            </WrapPanel>
        </DockPanel>
    </Grid>
</UserControl>
