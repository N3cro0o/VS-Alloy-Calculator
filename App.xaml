<Application x:Class="Alloy_Calc.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Alloy_Calc"
             xmlns:viewModel="clr-namespace:Alloy_Calc.MVVM.ViewModel"
             xmlns:viewModelAlloys="clr-namespace:Alloy_Calc.MVVM.ViewModel.Alloys"
             xmlns:view="clr-namespace:Alloy_Calc.MVVM.View"
             xmlns:viewAlloys="clr-namespace:Alloy_Calc.MVVM.View.Alloys">
    <Application.Resources>

        <DataTemplate DataType="{x:Type viewModel:HomeVM}">
            <view:HomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:TinBronzeVM}">
            <view:TinBronzeV/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:BismuthBronzeVM}">
            <view:BismuthBronzeV/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:BlackBronzeVM}">
            <view:BlackBronzeV/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModelAlloys:AllAlloysVM}">
            <viewAlloys:AllAlloysV/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModelAlloys:Alloy2MetalsVM}">
            <viewAlloys:Alloy2MetalsV/>
        </DataTemplate>

    </Application.Resources>
</Application>
